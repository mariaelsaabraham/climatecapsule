    </video>
    <p id="timelapse-caption">
      This NASA Landsat-based timelapse shows Dubaiâ€™s dramatic transformation â€” from desert sands in 2000 to a vibrant urban landscape in 2025.
    </p>
  </section>

  <script>
    const timelapseLinks = {
      dubai: "https://storage.googleapis.com/earthengine-timelapse/2020/curated/mp4/label/3x/dubai.mp4",
      amazon: "https://storage.googleapis.com/earthengine-timelapse/2020/curated/mp4/label/3x/rondonia-brazil.mp4",
      venice: "https://storage.googleapis.com/earthengine-timelapse/2020/curated/mp4/label/3x/venice-italy.mp4",
      addisababa: "https://storage.googleapis.com/earthengine-timelapse/2020/curated/mp4/label/3x/addis-ababa-ethiopia.mp4",
      pucallpa: "https://storage.googleapis.com/earthengine-timelapse/2020/curated/mp4/label/3x/pucallpa-peru.mp4"
    };

    const captions = {
      dubai: "This NASA Landsat-based timelapse shows Dubaiâ€™s dramatic transformation â€” from desert sands in 2000 to a vibrant urban landscape in 2025.",
      amazon: "This timelapse highlights deforestation in the Amazon Rainforest, showcasing the environmental impact over 25 years.",
      venice: "This timelapse shows changes in Veniceâ€™s urban landscape and water patterns over the last 25 years.",
      addisababa: "Witness the rapid urbanization of Addis Ababa, Ethiopia, as it evolves over the past two decades.",
      pucallpa: "View the meandering rivers and deforestation patterns in Pucallpa, Peru, part of the Amazon Basin."
    };

    const titles = {
      dubai: "Timelapse: Dubai (2000 â†’ 2025)",
      amazon: "Timelapse: Amazon Rainforest (2000 â†’ 2025)",
      venice: "Timelapse: Venice (2000 â†’ 2025)",
      addisababa: "Timelapse: Addis Ababa (2000 â†’ 2025)",
      pucallpa: "Timelapse: Pucallpa, Peru (2000 â†’ 2025)"
    };

    function updateTimelapse() {
      const loc = document.getElementById("location-select").value;
      const video = document.getElementById("timelapse-video");
      const source = video.querySelector('source'); 
      const title = document.getElementById("timelapse-title");
      const caption = document.getElementById("timelapse-caption");

      if (source) {
        source.src = timelapseLinks[loc];
      } else {
        video.src = timelapseLinks[loc];
      }

      title.textContent = titles[loc];
      caption.textContent = captions[loc];
      video.load();
    }
  </script>

