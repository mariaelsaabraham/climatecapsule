  <script>
    document.getElementById("compareBtn").addEventListener("click", async () => {
      const location = document.getElementById("location").value.trim();
      const year1 = document.getElementById("year1").value;
      const year2 = document.getElementById("year2").value;

      if (!location || !year1 || !year2) {
        alert("Please fill all fields: location and both years.");
        return;
      }

      const geoRes = await fetch(https://nominatim.openstreetmap.org/search?format=json&q=${location});
      const geoData = await geoRes.json();

      if (!geoData.length) {
        alert("Location not found. Please try another.");
        return;
      }

      const lat = parseFloat(geoData[0].lat);
      const lon = parseFloat(geoData[0].lon);
      const bboxSize = 2; // degrees around location
      const bbox = ${lon - bboxSize},${lat - bboxSize},${lon + bboxSize},${lat + bboxSize};
      const baseUrl = "https://gibs.earthdata.nasa.gov/wms/epsg4326/best/wms.cgi";
      const layer = "MODIS_Terra_CorrectedReflectance_TrueColor";

      const url1 = ${baseUrl}?SERVICE=WMS&REQUEST=GetMap&VERSION=1.3.0&LAYERS=${layer}&STYLES=&FORMAT=image/jpeg&CRS=EPSG:4326&BBOX=${bbox}&WIDTH=800&HEIGHT=600&TIME=${year1}-07-01;
      const url2 = ${baseUrl}?SERVICE=WMS&REQUEST=GetMap&VERSION=1.3.0&LAYERS=${layer}&STYLES=&FORMAT=image/jpeg&CRS=EPSG:4326&BBOX=${bbox}&WIDTH=800&HEIGHT=600&TIME=${year2}-07-01;

      document.getElementById("label1").innerHTML = <i class="fa-solid fa-calendar-days"></i> Year ${year1};
      document.getElementById("label2").innerHTML = <i class="fa-solid fa-calendar-days"></i> Year ${year2};
      document.getElementById("img1").src = url1;
      document.getElementById("img2").src = url2;
      document.getElementById("desc1").innerText = This image of ${location} from ${year1} shows the landscape and environmental state during that period.;
      document.getElementById("desc2").innerText = By ${year2}, satellite imagery of ${location} reveals visible changes‚Äîurban growth, reduced vegetation, or melting ice.;
      document.getElementById("info").innerText = Comparing ${location} between ${year1} and ${year2} provides a glimpse into how Earth's climate and human activity have shaped this region over time.;

      document.getElementById("comparison").style.display = "block";
    });
  </script>
